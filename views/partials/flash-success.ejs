<% if (success && success.length) { %>

<div
  class="alert alert-success absolute-centered mx-auto alert-dismissible fade show"
  role="alert"
>
  <strong><%= success %></strong>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if (error && error.length) { %>

<div
  class="alert alert-danger absolute-centered mx-auto alert-dismissible fade show"
  role="alert"
>
  <strong><%= error %></strong>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %>
