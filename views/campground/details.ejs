<!DOCTYPE html>
<html>
  <!-- prettier-ignore -->
  <%- include("../partials/head") %>
  <%- include("../partials/body-open") %>
  <%- include("../partials/navbar") %>
  <main class="container mt-5">
    <div class="row">
      <div class="col">
        <div><%= campground.title %></div>
        <div><%= campground.price %></div>
        <div><%= campground.description %></div>
        <div><%= campground.location %></div>
        <div class="d-flex gap-1">
          <a href="/campgrounds" class="btn btn-primary">Back</a>
          <a
            href="/campgrounds/<%= campground.id %>/edit"
            class="btn btn-primary"
            >Edit</a
          >
          <form
            class=""
            action="/campgrounds/<%= campground.id %>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>
      </div>
      <div class="col d-flex align-items-center justify-content-center">
        <img src="<%= campground.image %>" alt="" class="" />
      </div>
    </div>
  </main>
  <!-- prettier-ignore -->
  <%- include("../partials/footer") %>
  <%- include("../partials/body-close") %>
</html>
