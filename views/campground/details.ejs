<!-- LAYOUT -->
<% layout("layouts/standard") %>
<!-- NAVBAR -->
<%- include("../partials/navbar") %>
<!-- prettier-ignore -->
<% locals.name != undefined ? block('title').append(`<title>${name}</title>`) : block('title').append("Not Found")%>
<main class="container mt-5">
  <p>
    <div><%= campground.title %></div>
    <div><%= campground.price %></div>
    <div><%= campground.description %></div>
    <div><%= campground.location %></div>
    <div class="d-flex gap-1">
      <a href="/campgrounds" class="btn btn-primary">Back</a>
      <a href="/campgrounds/<%= campground.id %>/edit" class="btn btn-primary">Edit</a>
      <form
      class=""
      action="/campgrounds/<%= campground.id %>?_method=DELETE"
      method="post">
        <button class="btn btn-danger" type="submit">Delete</button>
      </form>
    </div>
  </p>
</main>