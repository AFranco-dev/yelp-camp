<!-- LAYOUT -->
<% layout("layouts/standard") %>
<!-- NAVBAR -->
<%- include("../partials/navbar") %>
<!-- prettier-ignore -->
<% locals.name != undefined ? block('title').append(`<title>${name}</title>`) : block('title').append("Not Found")%>
<main class="container mt-5">
  <h1 class="mb-3">Create New Campground</h1>
  <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label
      ><input
        placeholder="Title"
        name="title"
        id="title"
        class="form-control"
        value="<%= campground.title %>"
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price:</label
      ><input
        placeholder="Price"
        name="price"
        id="price"
        class="form-control"
        value="<%= campground.price %>"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description:</label
      ><input
        placeholder="Description"
        name="description"
        id="description"
        class="form-control"
        value="<%= campground.description %>"
      />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location:</label
      ><input
        placeholder="Location"
        name="location"
        id="location"
        class="form-control"
        value="<%= campground.location %>"
      />
    </div>
    <button class="btn btn-primary" type="submit">Edit</button>
  </form>
</main>
